    {{ include('Utm/last-payments.html.twig', {'payments': user.payments}) }}
    </div>
{% endif %}

{% if last_orders is defined %}
    <div class="user-info-block add-order-block col-12 col-sm-12 col-md-12 col-lg-12 col-xl-8 p-2">
    {{ last_orders|raw }}
</div>
{% endif %}
