{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | {{ 'orders'|trans }}{% endblock %}

{% block context %}
    {{ edit is defined ? 'order.form.edit_header'|trans : 'order.form.add_header'|trans }}
{% endblock %}

{% block breadcrumbs %}
    <div class="mt-2">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                {% if form.vars.value.utmId is empty %}
                {% set breadcrumbs = knp_menu_get_breadcrumbs_array(knp_menu_get_current_item('main')) %}
                    {% for breadcrumb in breadcrumbs %}
                        {% if not loop.last %}
                            <li class="breadcrumb-item"><a href="{{ breadcrumb.uri }}">{{ breadcrumb.label|trans }}</a></li>
                        {% else %}
                            <li class="breadcrumb-item active">{{ breadcrumb.label|trans }}</li>
                        {% endif %}
                    {% endfor %}
                {% endif %}
                {% if form.vars.value.utmId is not empty %}
                    {% set breadcrumbs = knp_menu_get_breadcrumbs_array(knp_menu_get_current_item('main')) %}
                    {% for breadcrumb in breadcrumbs %}
                            <li class="breadcrumb-item"><a href="{{ breadcrumb.uri }}">{{ breadcrumb.label|trans }}</a></li>
                    {% endfor %}
                    <li class="breadcrumb-item">
                        <a href="{{ path('search.by.data', {'type': 'id', 'value': form.vars.value.utmId}) }}">
                            {{ form.vars.value.fullname }}
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">{{ 'Add order'|trans }}</li>
                {% endif %}
            </ol>
        </nav>
    </div>
{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="row m-0 mb-2 block-shadow-10 form-wrapper">
        <div class="col-12 ml-2">
            <h3>
                {{ edit is defined ? 'order.form.edit_header'|trans : 'order.form.add_header'|trans }}
            </h3>
            <div class="form-group row pl-3 pr-3">
                {% if form.vars.value.utmId is empty %}
                    {% do form.utmId.setRendered %}
                {% endif %}
                {% if form.vars.value.utmId is not empty %}
                    {{  form_label(form.utmId) }}
                {% endif %}
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-12">
                            {{ form_widget(form.utmId) }}
                        </div>
                        <div class="col-sm-12 form-text text-muted ml-4">
                            {{ form_errors(form.utmId) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row pl-3 pr-3">
                {{ form_label(form.fullname) }}
                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-12">
                            {{ form_widget(form.fullname) }}
