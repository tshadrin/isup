                    {% if edit is defined %}
                        <div class="btn btn-primary btn-lg btn-primary-sham m-1">
                            <a data-toggle="confirmation" href="{{ path('intercom_delete', {'id': form.vars.value.id}) }}">
                                {{ 'task.form.delete'|trans }}
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
