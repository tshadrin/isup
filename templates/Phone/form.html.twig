{% set context = edit is defined ? 'phone.edit_title'|trans : 'phone.add_title'|trans  %}
{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | {{ context }}{% endblock %}

{% block context %} {{ context }} {% endblock %}

