                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-12">
                        {{ form_widget(form.number, { 'attr': {'class': 'form-control form-control-md'} }) }}
                        </div>
                        <div class="col-sm-12 form-text text-muted ml-4">
                            {{ form_errors(form.number) }}
